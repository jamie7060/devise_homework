<div class="about">
<p id="notice"><%= notice %></p>

<h1>게시판</h1>

<table>
  <thead>
    <tr>
      <th>제목</th>
      <th>내용</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td width="600px"><%= link_to post.제목, post, style: 'color:#FFFFFF;' %></td>
        <td><button type="button" class="btn btn-secondary btn-lg d-flex align-self-end">
        <%= link_to '수정하기', edit_post_path(post), style: 'color:#FFFFFF;' %>
        </button></td>
        <td><button type="button" class="btn btn-secondary btn-lg d-flex align-self-end">
        <%= link_to '삭제', post, method: :delete, data: { confirm: '확실합니까?' }, style: 'color:#FFFFFF;' %>
        </button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to '새 글 쓰기', new_post_path, style: 'color:#FFFFFF;' %>
</div>
